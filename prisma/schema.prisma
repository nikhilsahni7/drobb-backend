// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  googleId      String?   @unique
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Profile information
  profile       Profile?
  preferences   Preference?

  // Relations
  likesGiven    Match[]   @relation("UserLikes")
  likesReceived Match[]   @relation("UserLikedBy")
  cart          Cart?
  orders        Order[]

  @@map("users")
}

model Profile {
  id          String    @id @default(cuid())
  userId      String    @unique
  name        String
  gender      Gender
  birthDate   DateTime
  bio         String?
  avatar      String?
  aesthetic   String[]
  photos      String[]
  // Location fields
  latitude    Float?
  longitude   Float?
  city        String?
  state       String?
  country     String?
  lastLocationUpdate DateTime?

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
  // Add an index for location-based queries
  @@index([latitude, longitude])
}

model Preference {
  id              String    @id @default(cuid())
  userId          String    @unique
  interestedIn    Gender[]
  ageMin          Int       @default(18)
  ageMax          Int       @default(99)
  distance        Int       @default(50)  // in kilometers
  aesthetics      String[]  // preferred style tags
  clothingTypes   String[]  // preferred clothing categories

  // Relations
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("preferences")
}

model Match {
  id          String    @id @default(cuid())
  fromUserId  String
  toUserId    String
  status      MatchStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  fromUser    User      @relation("UserLikes", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser      User      @relation("UserLikedBy", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, toUserId])
  @@map("matches")
}

model Product {
  id          String    @id @default(cuid())
  name        String
  description String
  price       Decimal
  images      String[]
  aesthetic   String[]
  category    String
  size        String[]
  inStock     Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  cartItems   CartItem[]
  orderItems  OrderItem[]

  @@map("products")
}

model Cart {
  id          String    @id @default(cuid())
  userId      String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       CartItem[]

  @@map("carts")
}

model CartItem {
  id          String    @id @default(cuid())
  cartId      String
  productId   String
  quantity    Int
  size        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  cart        Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("cart_items")
}

model Order {
  id              String    @id @default(cuid())
  userId          String
  status          OrderStatus @default(PENDING)
  total           Decimal
  paymentIntent   String?   // For payment gateway integration
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User      @relation(fields: [userId], references: [id])
  items           OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          String    @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  price       Decimal   // Price at time of purchase
  size        String
  
  // Relations
  order       Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product   @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("otps")
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
  OTHER
}

enum MatchStatus {
  PENDING
  MATCHED
  REJECTED
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}